{
  "name": "mel-hv/mel",
  "description": "Pacote usado na integração com o API Rest do Mercado Livre",
  "license": "MIT",
  "authors": [
    {
      "name": "Kleyson Costa",
      "email": "kleysondac@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.6",
    "php-http/client-implementation": "^1.0",
    "php-http/client-common": "^1.7",
    "php-http/message-factory": "^1.0",
    "psr/http-message": "^1.0",
    "php-http/discovery": "^1.4",
    "php-http/httplug": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "mockery/mockery": "^1.0",
    "php-http/mock-client": "^1.1",
    "guzzlehttp/psr7": "^1.4"
  },
  "autoload": {
    "psr-4": {
      "Mel\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MelTests\\": "tests"
    }
  },
  "scripts": {
    "tests:coverage": "phpunit --coverage-text --coverage-html tests/_output/coverage-html --testdox-html tests/_output/testdox.html"
  }
}
